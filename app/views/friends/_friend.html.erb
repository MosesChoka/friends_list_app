
<div  id="<%= dom_id friend %>">
  <p>
    <strong>First name:</strong>
    <%= friend.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= friend.last_name %>
  </p>

  <% if friend.images.attached? %>
    <% friend.images.each do |image| %>
      <%= image_tag(image, height: 100) %>
      <br />
    <% end %>
  <% end %>

  <p>
    <strong>Phone:</strong>
    <%= friend.phone %>
  </p>

  <p>
    <strong>Email address:</strong>
    <%= friend.email_address %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= friend.twitter %>
  </p>

</div>

